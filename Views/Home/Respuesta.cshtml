<body class="@ViewBag.BODY">
    

<div class="@ViewBag.PADRE">
    <div class="@ViewBag.SCREEN">
        <img src="@ViewBag.imgCORONITA">
        <p class="@ViewBag.PARRAFO">Respuesta: <strong class="@ViewBag.STRONG">@ViewBag.RESULTADO</strong></p>
         <div class="botonn">
            
            <button class="@ViewBag.BOTON">
                <a href='@Url.Action("Jugar")'>Seguir jugando </a>
            </button>
            <div class="resultadoo">
            @if(ViewBag.RESULTADO == "INCORRECTA!!")
            {
               <p class="@ViewBag.PARRAFO">Respuesta correcta: <strong class="strong-correcta">@ViewBag.RespCorrecta</strong> </p> 
    
            }
            </div>
        </div>
    </div>
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
